{
  "name": "runlify-spec-tests",
  "version": "0.0.1",
  "description": "Conformance test suite for runlify implementations across different languages",
  "author": "Damir Manapov",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "compose:pull": "docker compose -f compose/docker-compose.yml pull",
    "compose:up": "docker compose -f compose/docker-compose.yml up -d --wait",
    "compose:down": "docker compose -f compose/docker-compose.yml down",
    "compose:restart": "pnpm compose:down && pnpm compose:up",
    "compose:reset": "docker compose -f compose/docker-compose.yml down -v --remove-orphans",
    "check": "./check.sh",
    "health": "./health.sh",
    "all-checks": "./all-checks.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^22.13.4",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
